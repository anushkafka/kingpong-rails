<p>New Conversation</p>

<%= form_tag conversations_path, method: :post do%>
<div>
<%= select_tag :player_id, options_from_collection_for_select(@recepients, :id, :name)%>
</div>

<div>
<%= text_field_tag :subject, nil, placeholder: "Subject"%>
</div>

<div>
<%= text_area_tag :body, nil, placeholder: "Leave a message"%>
</div>

<button>send</button>
<% end %>